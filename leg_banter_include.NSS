// ///////////////////////////////////////////////////////////////////////////
// This function calls the actual Banter Speak script for Day Night cycle
// speeches.  It is used this way as a function to allow for random delays
// when the day changes to night and vice versa rather than have every NPC
// in the area speak all at once.
// string sCycle			- Day or Night, whichever cycle we are switching.
//	Returns: N/A
void LEG_BANTER_DAYNIGHT_ExecuteSpeak(string sCycle);





// /////////////////////////////////////////////////////////////////////////////////////////////////////
// FUNCTIONS
// /////////////////////////////////////////////////////////////////////////////////////////////////////


/////////////////////////////////////////////////////
// LEG_BANTER_DAYNIGHT_ExecuteSpeak
/////////////////////////////////////////////////////
void LEG_BANTER_DAYNIGHT_ExecuteSpeak(string sCycle)
{
	AddScriptParameterString(GetLocalString(OBJECT_SELF, "LEG_BANTER_" + sCycle));
	AddScriptParameterInt(GetLocalInt(OBJECT_SELF, "LEG_BANTER_" + sCycle + "Chance"));
	AddScriptParameterString(sCycle);
	ExecuteScriptEnhanced("leg_banter_speak", OBJECT_SELF);
}